mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`, autoplay)
        .videoPlayer__controls
            .vidoePlayer__column
                span#jsVolumnButton
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00 
                    span  /
                    span#totalTime 10:00
                input.videoPlayer__volume#jsVolume(type="range",min="0",max="1",step="0.1",value="0.5")
            .vidoePlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .vidoePlayer__column#jsScreenButton
                span
                    i.fas.fa-expand